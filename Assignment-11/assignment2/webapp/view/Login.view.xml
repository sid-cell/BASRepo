<mvc:View
    controllerName="assignment2.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Shell id="shell">
        <App id="app">
            <!-- <pages> -->
                <Page  id="page" title="{i18n>title}" >
                    <content>
                        <VBox backgroundDesign="Transparent" fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
                            <items>
                                <Input id="uid" placeholder="UserID"></Input>
                                <Input id="pwd" placeholder="Password" type="Password"></Input>
                                <Button width="11rem" text="Login" type="Emphasized" press="onLoginTap"></Button>
                            </items>
                         </VBox>
                    </content>
                    <footer >
                        <Bar>
                            <contentLeft>
                                <Text text="techippo"></Text>
                            </contentLeft>
                            <contentRight>
                                <Text text="myLogin"></Text>
                            </contentRight>
                        </Bar>
                    </footer>
                </Page>
            <!-- </pages> -->
        </App>
    </Shell>
</mvc:View>
