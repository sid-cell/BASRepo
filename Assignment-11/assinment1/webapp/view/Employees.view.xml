                                        <core:Icon size="2rem" src="sap-icon://attachment-photo" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" />
                                        <VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
                                            <Label text="{empData>Name}" design="Bold"/>
                                            <Label text="{empData>Department}"/>
                                        </VBox>
                                        <VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
                                            <Label text="Emergency Contact:{empData>AdditionalDetails/EmergencyContact/Name}"/>
                                        </VBox>
                                    </HBox>
                                </CustomListItem> -->
                                
                                <ObjectListItem
                                    title="{empData>Name}"
                                    type="Active"
                                    press="showDetails"
                                   >
                                    <ObjectAttribute text="{empData>Department}" />
                                    <ObjectAttribute text="{empData>Gender}" />
                                    <ObjectAttribute text="{empData>BaseLocation}"/>
		                        </ObjectListItem>
                            </items>
                        </List>
                    
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
