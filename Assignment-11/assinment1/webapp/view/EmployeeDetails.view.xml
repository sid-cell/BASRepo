<mvc:View
    controllerName="assinment1.controller.EmployeeDetails"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <OverflowToolbar >
                            <Button icon="sap-icon://nav-back" press="navToHome"/>
                            <ToolbarSpacer/>
                            <Label text="Employee Details" design="Bold"/>
                        </OverflowToolbar>
                        <ObjectHeader   title="Emergency contact Name:{DetailsModel>/emerName}">
                        <attributes>
            
                            <ObjectAttribute text="Emergency contact Number:{DetailsModel>/emerNum}"></ObjectAttribute>
                            <ObjectAttribute text="Address:{DetailsModel>/Street},{DetailsModel>/FlatNo},{DetailsModel>/City}"></ObjectAttribute>
                            
                        </attributes>
                        
                        </ObjectHeader>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View> 