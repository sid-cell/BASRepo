<mvc:View
    controllerName="week7assignment.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <HBox justifyContent="Center" >

                         <VBox justifyContent="Start" >
                            <Button text="Create a Label by Adding Style class" type="Emphasized" press="createLabelStyleClass" ></Button>  
                        </VBox>
                                        
                        
                        <List id="prodList" headerText="This is the List by binding a JSON data created in the controller" items="{path:'/Products'}" >
                            <items>
                                <StandardListItem id="_IDGenStandardListItem1" title="{color}" description="{value}" ></StandardListItem>
                            </items>
                        </List>
                        <!-- <List id="oData" items="{path:'/Employees'}">
                            <items >
                                <StandardListItem id="_IDGenStandardListItem2" title="{FirstName}" description="{Address}"></StandardListItem>
                            </items>
                        </List> -->
                        <HBox justifyContent="Center" >
                            <List id="2" headerText="This is the list by binding odata in controller" items="{localModel>/results}">
                            <items>
                                <StandardListItem id="cat" title="{localModel>CategoryName}" description="{localModel>Description}" ></StandardListItem>
                            </items>
                            </List>
                        </HBox>
                        </HBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
