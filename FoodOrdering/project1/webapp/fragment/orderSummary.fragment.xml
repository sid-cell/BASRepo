<core:FragmentDefinition 
xmlns="sap.m"
xmlns:core="sap.ui.core">
<Dialog title="Order Summary" type="Message">
    <Title text="{data>/hotelName}" ></Title>
    <List items="{path:'data>/selectedItems'}">
    <CustomListItem class="sapUiSmallMarginTop sapUiSmallMarginBeginEnd">

        <HBox justifyContent="SpaceBetween">
            <VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
                <Label text="{data>name}"/>
                <Label text="{data>price}"/>
            </VBox>
            <VBox>
                <Label text="Quantity: {data>count}"/>
            </VBox>
        </HBox>
    </CustomListItem>
    </List>
    <Label text="Total : {data>/total}" class="sapUiSmallMargin"></Label>
    <buttons>
        <Button text="Cancel" press="cancel" type="Ghost" ></Button>
        <Button text="Submit" press="toView2" type="Emphasized" ></Button>
    </buttons>

</Dialog>



</core:FragmentDefinition>