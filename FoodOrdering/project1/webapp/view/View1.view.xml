<mvc:View
    controllerName="com.project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page showHeader="true">
                    <customHeader>
                        <OverflowToolbar style="Standard" >
                            <Label text="FoodOrdering" design="Bold" class="sapUiTinyMarginBegin sapUiSmallMargin"/>
                                <ToolbarSpacer/>
                                <Button text="Show Order history" press="orderHistory" type="Accept"/>
                        </OverflowToolbar>
                    </customHeader>
                    <content>
                        <HBox justifyContent="SpaceBetween" >
                            <Label text="Please Select Hote
                            \    " class="sapUiTinyMarginTop"/>
                            <ComboBox items="{path:'data>/Hotels'}" selectedKey="/selectedHotel" >
                                <core:Item key="{data>key}" text="{data>name}"/>
                            </ComboBox>
                        </HBox>
                        <VBox >
                            <List headerText="Menu Items" items="{path:'data>/menu'}">
                                <CustomListItem class="sapUiSmallMarginBeginEnd sapUiSmallMarginTop">
                                    <HBox justifyContent="SpaceBetween" >
                                        <VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
                                            <Label text="{data>name}"/>
                                            <Label text="{data>price}"/>
                                        </VBox>
                                        <VBox>
                                            <StepInput value="{data>count}" min="0" max="10" step="1" change="onChange"/>
                                        </VBox>
                                    </HBox>
                                </CustomListItem>
                            </List>
                        </VBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
