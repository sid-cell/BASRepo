<mvc:View 
    
    controllerName="week10.controller.Invoice"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
   
   
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <OverflowToolbar >
                        <Button icon="sap-icon://nav-back" type="Emphasized" press="navToCustomer"/>
                    </OverflowToolbar>
                     
                    <List id="ivoice" items="{path:'localModel>/invoices',
                    sorter:{
                        path:'ShipperName',descending:false,group:true
                    }}" >
                    <headerToolbar>
                    <Toolbar >
                    <Title text="Invoice List"></Title>
                    </Toolbar>
                    </headerToolbar>
                        <items>
                            <ObjectListItem title="{localModel>CustomerName}">
                                <ObjectAttribute text="OrderID:{localModel>OrderID}"/>
                                <ObjectAttribute text="Shipper:{localModel>ShipperName}"/>
                                <ObjectAttribute text="Product:{localModel>ProductName}"/>
                            </ObjectListItem>
                        </items>
                    </List>
                </Page>
            </pages>
        </App>
    </Shell>

</mvc:View>
