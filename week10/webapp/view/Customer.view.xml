<mvc:View 
    
    controllerName="week10.controller.Customer"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
   
   
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <OverflowToolbar >
                        <Button icon="sap-icon://nav-back" type="Emphasized" press="navToTable"/>
                    </OverflowToolbar>
                    
                    <subHeader>
                        <Bar >
                            <contentLeft>
                                <SearchField search="onSearchList"></SearchField>
                            </contentLeft>
                        </Bar>
                     </subHeader>
                     
                    <List id="customers" headerText="Customer List" items="{localModel>/customers}">
                        <items>
                            <ObjectListItem title="{localModel>CustomerID}">
                                <ObjectAttribute text="Name:{localModel>ContactName}"/>
                                <ObjectAttribute text="Company:{localModel>CompanyName}"/>
                                <ObjectAttribute text="Title:{localModel>ContactTitle}"/>
                            </ObjectListItem>
                        </items>
                    </List>
                    <footer>
                        <OverflowToolbar >
                        <ToolbarSpacer/>
                            <Button icon="sap-icon://arrow-right" text="Go to Invoices" type="Emphasized" press="navToInvoices"/>
                        </OverflowToolbar>
                    </footer>
                </Page>
            </pages>
        </App>
    </Shell>

</mvc:View>
